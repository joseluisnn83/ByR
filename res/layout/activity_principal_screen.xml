            android:gravity="center" >

            <ImageView
                android:id="@+id/imageButtonPrevision"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_heigth"
                android:layout_centerInParent="true"
                android:contentDescription="@string/descriptionButtonPrevision"
                android:src="@drawable/prevision" />

            <TextView
                android:id="@+id/textViewPrevision"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonPrevision"
                android:gravity="center"
                android:text="@string/descriptionButtonPrevision"
                android:textSize="@dimen/text_medium" />
        </RelativeLayout>
    -->
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDeveloper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:text="@string/textViewDeveloper"
        android:textSize="@dimen/text_medium" />

</LinearLayout>