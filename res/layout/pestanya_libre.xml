<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listados_pestanya_background"
    android:orientation="vertical"
    android:padding="@dimen/pestanyaInformesTotalesPadding" >

    <!-- LinearLayout que va a contener los Spinner con Años, meses y días -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewPestanyaILibreDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/textViewPestanyaInformesLibreFechaInicio"
                android:textColor="@color/ListadosNegro"
                android:textSize="@dimen/text_medium" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreForwardMonthsInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:contentDescription="@string/ivContentDescriptionForwardSearch"
                android:src="@android:drawable/ic_media_ff" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreForwardDaysInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreForwardMonthsInicio"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:contentDescription="@string/ivContentDescriptionForwardSearch"
                android:src="@android:drawable/ic_media_next" />
                        
            <TextView
                android:id="@+id/textViewPestanyaILibreFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreForwardDaysInicio"
                android:paddingRight="@dimen/pestanyaInformesTextViewDataPadding"
                android:paddingLeft="@dimen/pestanyaInformesTextViewDataPadding"
                android:text=""
                android:textSize="@dimen/text_medium"
                android:textColor="@color/ListadosNegro" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreBackDaysInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/textViewPestanyaILibreFechaInicio"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:contentDescription="@string/ivContentDescriptionBackSearch"
                android:src="@android:drawable/ic_media_previous" />

            <ImageView
                android:id="@+id/imageViewPestanyaILibreBackMonthsInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreBackDaysInicio"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:contentDescription="@string/ivContentDescriptionBackSearch"
                android:src="@android:drawable/ic_media_rew" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewPestanyaILibreHasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/textViewPestanyaInformesLibreFechaFin"
                android:textColor="@color/ListadosNegro"
                android:textSize="@dimen/text_medium" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreForwardMonthsFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/ivContentDescriptionForwardSearch"
                android:src="@android:drawable/ic_media_ff" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreForwardDaysFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreForwardMonthsFin"
                android:contentDescription="@string/ivContentDescriptionForwardSearch"
                android:src="@android:drawable/ic_media_next" />
            
            <TextView
                android:id="@+id/textViewPestanyaILibreFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreForwardDaysFin"
                android:paddingRight="@dimen/pestanyaInformesTextViewDataPadding"
                android:paddingLeft="@dimen/pestanyaInformesTextViewDataPadding"
                android:text=""
                android:textSize="@dimen/text_medium"
                android:textColor="@color/ListadosNegro" />
            
            <ImageView
                android:id="@+id/imageViewPestanyaILibreBackDaysFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:layout_toLeftOf="@id/textViewPestanyaILibreFechaFin"
                android:contentDescription="@string/ivContentDescriptionBackSearch"
                android:src="@android:drawable/ic_media_previous" />

            <ImageView
                android:id="@+id/imageViewPestanyaILibreBackMonthsFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pestanyaInformesImageViewMovingDataPadding"
                android:layout_toLeftOf="@id/imageViewPestanyaILibreBackDaysFin"
                android:contentDescription="@string/ivContentDescriptionBackSearch"
                android:src="@android:drawable/ic_media_rew" />
            
        </RelativeLayout>
        
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewPestanyaILibre"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayoutBarraListadoIngresosLibre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listados_barra_ingresos"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageViewListadoIngresosLibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/ivContentDescriptionListadoIngresos"
                    android:padding="10dip"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/imageViewListadoIngresosLibre"
                    android:text="@string/textViewListadoIngresos"
                    android:textColor="@color/ListadosNegro"
                    android:textSize="@dimen/text_medium" />
            </RelativeLayout>

            <!-- LinearLayout de CONTENIDO de INGRESOS -->

            <LinearLayout
                android:id="@+id/linearLayoutListadoIngresosLibre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listados_contenido_ingresos"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutBarraListadoGastosLibre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               	android:background="@drawable/listados_barra_gastos"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageViewListadoGastosLibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/ivContentDescriptionListadoGastos"
                    android:padding="10dip"
                    android:src="@android:drawable/arrow_down_float" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/imageViewListadoGastosLibre"
                    android:text="@string/textViewListadoGastos"
                    android:textColor="@color/ListadosNegro"
                    android:textSize="@dimen/text_medium" />
            </RelativeLayout>

            <!-- LinearLayout de CONTENIDO de GASTOS -->

            <LinearLayout
                android:id="@+id/linearLayoutListadoGastosLibre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listados_contenido_gastos"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- LinearLayout para los Totales y el Balance -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           	android:orientation="vertical"
            android:paddingBottom="@dimen/pestanyaInformesTotalesPadding"
            android:paddingLeft="@dimen/pestanyaInformesTotalesPadding"
            android:paddingTop="@dimen/pestanyaInformesTotalesPadding" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_ingresos"
                    android:textColor="@color/ListadosNegro"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/textViewTotalIngresosLibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_gastos"
                    android:textColor="@color/ListadosNegro"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/textViewTotalGastosLibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_balance"
                    android:textColor="@color/ListadosNegro"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/textViewTotalBalanceLibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>
        </LinearLayout>
		<!--  
        <ImageButton
            android:id="@+id/imageButtonSearchFechaLibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/ibContentDescriptionSearchTrimestre"
            android:src="@android:drawable/ic_menu_search" />
       	-->
       	<ImageView 
       	    android:id="@+id/imageViewSearchFechaLibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/ivContentDescriptionSearchLibre"            
            android:src="@android:drawable/ic_menu_search"
       	    />
       	
    </LinearLayout>

</LinearLayout>